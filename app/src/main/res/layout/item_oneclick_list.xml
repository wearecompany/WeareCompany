<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/oneclik_ca_0"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:background="@drawable/mypage_request_list_ca_bac">

                            <ImageView
                                android:id="@+id/oneclik_ca_0_img"
                                android:layout_width="14dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/oneclik_ca_1"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/mypage_request_list_ca_bac"
                            android:visibility="invisible">

                            <ImageView
                                android:id="@+id/oneclik_ca_1_img"
                                android:layout_width="14dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/oneclik_ca_2"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/mypage_request_list_ca_bac"
                            android:visibility="invisible">

                            <ImageView
                                android:id="@+id/oneclik_ca_2_img"
                                android:layout_width="14dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/oneclik_ca_3"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/mypage_request_list_ca_bac"
                            android:visibility="invisible">

                            <ImageView
                                android:id="@+id/oneclik_ca_3_img"
                                android:layout_width="14dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center" />
                        </FrameLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/request_list_send_onclick_call_time"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:textColor="#0f0f0f"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/request_list_send_onclick_purchase_btn"
                        android:layout_width="70dp"
                        android:layout_height="24dp"
                        android:text="구매확정"
                        android:gravity="center"
                        android:clickable="true"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:textColor="#fff"
                        android:textSize="13dp"
                        android:background="@drawable/estimate_btn_background"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/request_list_send_onclick_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="요청사항"
                            android:textColor="#000"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/request_list_send_onclick_contents"
                            android:layout_width="200dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:textSize="11dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="희망금액"
                            android:textColor="#eaeaea"
                            android:textSize="11dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/request_list_send_onclick_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#6d34f3"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="원"
                                android:textColor="#6d34f3"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>