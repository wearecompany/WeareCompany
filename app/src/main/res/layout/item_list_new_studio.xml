<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/new_studio_image"
        android:layout_width="175dp"
        android:layout_height="114dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginStart="7dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/new_studio_image"
        app:layout_constraintStart_toStartOf="@+id/new_studio_image"
        app:layout_constraintTop_toBottomOf="@id/new_studio_image">

        <TextView
            android:id="@+id/new_studio_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="#656565"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="9dp"
                android:src="@drawable/datail_addr_pin"/>

            <TextView
                android:id="@+id/new_studio_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="#b4b4b4"
                android:textSize="10dp"/>
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>