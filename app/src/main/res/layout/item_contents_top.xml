<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/contents_top_image"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintDimensionRatio="1.85:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/contents_top_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#6d34f3"
            android:textSize="9dp"
            app:layout_constraintStart_toStartOf="@id/contents_top_image"
            app:layout_constraintTop_toBottomOf="@id/contents_top_image" />

        <TextView
            android:id="@+id/contents_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#0f0f0f"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="@id/contents_top_category"
            app:layout_constraintTop_toBottomOf="@id/contents_top_category" />


        <LinearLayout
            android:id="@+id/contents_top_register_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/contents_top_title"
            app:layout_constraintTop_toBottomOf="@+id/contents_top_title">

            <TextView
                android:id="@+id/contents_top_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#787878"
                android:textSize="10dp" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="25dp"
            android:background="#cbcbcb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contents_top_register_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>