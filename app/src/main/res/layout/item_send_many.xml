<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="13dp"
            android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/request_view_status"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/progress_status_no" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/send_many_main_category"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:background="@drawable/user_request_send"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/send_many_call_time"
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:textColor="#0f0f0f"
                        android:textSize="10dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7dp"
                    android:background="#ededed"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="21dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/send_many_sub_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="인물촬영/프로필"
                            android:textColor="#0f0f0f"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/send_many_user_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:text="카카오프랜즈"
                                android:textColor="#484848"
                                android:textSize="11dp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="님"
                                android:textColor="#cfcfcf"
                                android:textSize="11dp"
                                android:textStyle="bold" />
                        </LinearLayout>



                        <TextView
                            android:id="@+id/send_many_datetime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="시간/날짜 협의가능"
                            android:textColor="#cfcfcf"
                            android:textSize="11dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/send_many_user_thumbnail"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/mypage_user_not_image" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/send_many_thumbnail_RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="17dp"
                    android:visibility="gone"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>