<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/weekly_model_image"
        android:layout_width="0dp"
        android:layout_height="138dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/weekly_model_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_marginBottom="49dp"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/weekly_model_image"
        app:layout_constraintStart_toStartOf="@+id/weekly_model_image" />

    <TextView
        android:id="@+id/weekly_model_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/weekly_model_name"
        app:layout_constraintStart_toEndOf="@+id/weekly_model_name" />

    <TextView
        android:id="@+id/weekly_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/weekly_model_name"
        app:layout_constraintTop_toBottomOf="@+id/weekly_model_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/weekly_model_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/weekly_model_image"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>