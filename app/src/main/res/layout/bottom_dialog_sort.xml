<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        app:behavior_peekHeight="56dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="추천순"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/bottom_sort_0"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:clickable="true">

                <TextView
                    android:id="@+id/bottom_sort_text_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="26dp"
                    android:text="기본순"
                    android:textColor="#000"
                    android:textSize="11dp" />


                <ImageView
                    android:id="@+id/bottom_sort_image_0"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="13dp"
                    android:visibility="gone"
                    android:src="@drawable/filter_check" />

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:id="@+id/bottom_sort_1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:clickable="true">

                <TextView
                    android:id="@+id/bottom_sort_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="26dp"
                    android:text="인기순"
                    android:textColor="#000"
                    android:textSize="11dp" />


                <ImageView
                    android:id="@+id/bottom_sort_image_1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="13dp"
                    android:visibility="gone"
                    android:src="@drawable/filter_check" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:id="@+id/bottom_sort_2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:clickable="true">

                <TextView
                    android:id="@+id/bottom_sort_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="26dp"
                    android:text="평점순"
                    android:textColor="#000"
                    android:textSize="11dp" />

                <ImageView
                    android:id="@+id/bottom_sort_image_2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="13dp"
                    android:visibility="gone"
                    android:src="@drawable/filter_check" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:id="@+id/bottom_sort_3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:clickable="true">

                <TextView
                    android:id="@+id/bottom_sort_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="26dp"
                    android:text="등록순"
                    android:textColor="#000"
                    android:textSize="11dp" />

                <ImageView
                    android:id="@+id/bottom_sort_image_3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="13dp"
                    android:visibility="gone"
                    android:src="@drawable/filter_check" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:id="@+id/bottom_sort_4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:clickable="true">

                <TextView
                    android:id="@+id/bottom_sort_text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="26dp"
                    android:text="응답순"
                    android:textColor="#000"
                    android:textSize="11dp" />

                <ImageView
                    android:id="@+id/bottom_sort_image_4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="13dp"
                    android:visibility="gone"
                    android:src="@drawable/filter_check" />
            </RelativeLayout>

            <Button
                android:id="@+id/top_di_request"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:backgroundTint="#6d34f3"
                android:text="확인"
                android:textColor="#fff"
                android:textColorHint="#cbcbcb"
                android:textSize="13dp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>