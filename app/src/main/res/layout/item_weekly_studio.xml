<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/weekly_studio_image"
        android:layout_width="0dp"
        android:layout_height="138dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/weekly_studio_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="19dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="49dp"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/weekly_studio_image"
        app:layout_constraintStart_toStartOf="@+id/weekly_studio_image" />

    <TextView
        android:id="@+id/weekly_studio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/weekly_studio_name"
        app:layout_constraintTop_toBottomOf="@+id/weekly_studio_name" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="7dp"
        android:layout_height="11dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/datail_addr_pin"
        app:layout_constraintBottom_toBottomOf="@+id/weekly_studio_image"
        app:layout_constraintStart_toStartOf="@+id/weekly_studio_title"
        />

    <TextView
        android:id="@+id/weekly_studio_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:textColor="#fff"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/weekly_studio_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/weekly_studio_image"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>