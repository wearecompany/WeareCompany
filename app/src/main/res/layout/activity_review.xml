<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sharing_radius">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="#fff"
                android:theme="?attr/actionBarTheme"
                app:layout_collapseMode="pin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="리뷰 작성"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="25dp"
                android:paddingEnd="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/expert_thumbnail"
                            android:layout_width="98dp"
                            android:layout_height="98dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="13dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/expert_user_nickname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="비비가구"
                                    android:textColor="#484848"
                                    android:textStyle="bold"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/expert_user_nickname_sub_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:text="대여업체"
                                    android:textColor="#cbcbcb"
                                    android:textSize="11dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/expert_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="뷰티/패션/쥬얼리"
                                android:textColor="#cbcbcb"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/expert_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="#656565"
                                android:textSize="12dp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginTop="20dp"
                    android:background="#f5f5f5" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="서비스에 대한 만족도를 남겨주세요!"
                    android:textColor="#0f0f0f"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/review_item_0"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginEnd="5dp"
                        android:clickable="true"
                        android:src="@drawable/review_on" />

                    <ImageView
                        android:id="@+id/review_item_1"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginEnd="5dp"
                        android:clickable="true"
                        android:src="@drawable/review_off" />

                    <ImageView
                        android:id="@+id/review_item_2"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginEnd="5dp"
                        android:clickable="true"
                        android:src="@drawable/review_off" />

                    <ImageView
                        android:id="@+id/review_item_3"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginEnd="5dp"
                        android:clickable="true"
                        android:src="@drawable/review_off" />

                    <ImageView
                        android:id="@+id/review_item_4"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginEnd="5dp"
                        android:clickable="true"
                        android:src="@drawable/review_off" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginTop="23dp"
                    android:background="#f5f5f5" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="사진업로드 (선택)"
                    android:textColor="#0f0f0f"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="13dp">

                    <LinearLayout
                        android:id="@+id/photo_upload"
                        android:layout_width="79dp"
                        android:layout_height="79dp"
                        android:background="@drawable/join_background"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_test_camera_25" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/photo_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="사진업로드"
                                android:textColor="#cbcbcb"
                                android:textSize="10dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/review_photo"
                        android:layout_width="79dp"
                        android:layout_height="79dp"
                        android:clickable="true"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="후기작성"
                    android:textColor="#0f0f0f"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="@+id/request_user_datetime"
                    app:layout_constraintTop_toBottomOf="@+id/request_user_datetime" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/review_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    app:boxStrokeColor="#6d34f3"
                    app:counterEnabled="true"
                    app:counterMaxLength="1000"
                    app:endIconMode="clear_text"
                    app:hintTextColor="#6d34f3">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/review_text"
                        android:layout_width="match_parent"
                        android:layout_height="184dp"
                        android:gravity="top|left"
                        android:maxLength="100"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:singleLine="false"
                        android:textColor="#000"
                        android:textSize="14dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/review_ok"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="29dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#6d34f3"
                    android:text="후기 작성"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>