<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:elevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="#6d34f3"
                android:theme="?attr/actionBarTheme"
                app:layout_collapseMode="pin">

                <LinearLayout
                    android:id="@+id/mypage_name_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mypage_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="님"
                        android:textColor="#fff"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/mypage_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마이페이지"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:visibility="gone"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/chat_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:visibility="gone"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/mypage_upload" />

                    <ImageView
                        android:id="@+id/mypage_setting"
                        android:layout_width="21dp"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:layout_height="21dp"
                        android:src="@drawable/mypage_setting" />
                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/mypage_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#6d34f3"
            android:paddingBottom="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <FrameLayout
                    android:layout_width="94dp"
                    android:layout_height="94dp">

                    <ImageView
                        android:id="@+id/mypage_profile"
                        android:layout_width="89dp"
                        android:layout_height="89dp"
                        android:layout_gravity="center" />

                        <ImageView
                            android:id="@+id/mypage_profile_edit"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/mypage_edit" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mypage_bookmarker_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/mypage_bookmarker"
                    android:layout_width="107dp"
                    android:layout_height="69dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/test_mypage_profile_list"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="즐겨찾기"
                        android:textColor="#fff"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center"
                                android:src="@drawable/mypage_bookmarker" />

                        <TextView
                            android:id="@+id/mypage_bookmarker_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textColor="#fff"
                            android:textSize="16dp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mypage_review"
                    android:layout_width="107dp"
                    android:layout_height="69dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:background="@drawable/test_mypage_profile_list"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/mypage_review_status"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:visibility="invisible"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_mypage_review_status"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="후기보기"
                        android:textColor="#fff"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:src="@drawable/mypage_review" />

                        <TextView
                            android:id="@+id/mypage_review_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textColor="#fff"
                            android:textSize="16dp" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


                <LinearLayout
                    android:id="@+id/mypage_list_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mypage_top">

                    <TextView
                        android:id="@+id/mypage_request_ca_btn_1"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/mypage_ca_on"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="진행현황"
                        android:textColor="#6d34f3"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mypage_request_ca_btn_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/mypage_ca_off"
                        android:gravity="center"
                        android:text="취소현황"
                        android:textColor="#838383"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mypage_list_layout_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mypage_list_layout">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            app:layout_constraintEnd_toEndOf="@id/mypage_list_layout"
                            app:layout_constraintStart_toStartOf="@id/mypage_list_layout"
                            app:layout_constraintTop_toBottomOf="@id/mypage_list_layout">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/mypage_ca_bac"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/mypage_request_ca_layout_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="50dp"
                                android:layout_marginEnd="15dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/mypage_request_ca_1"
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/request_ca_round_off"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="보낸요청"
                                        android:textColor="#484848"
                                        android:textSize="13dp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_marginBottom="9dp"
                                    android:layout_weight="0.5"
                                    android:background="#dadada" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/mypage_request_ca_2"
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/request_ca_round_off"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="받은견적"
                                        android:textColor="#484848"
                                        android:textSize="13dp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_marginBottom="9dp"
                                    android:layout_weight="0.5"
                                    android:background="#dadada" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/mypage_request_ca_3"
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/test_mypage_request_list"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="결제완료"
                                        android:textColor="#484848"
                                        android:textSize="13dp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_marginBottom="9dp"
                                    android:layout_weight="0.5"
                                    android:background="#dadada" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/mypage_request_ca_4"
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/test_mypage_request_list"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="진행완료"
                                        android:textColor="#484848"
                                        android:textSize="13dp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_marginBottom="9dp"
                                    android:layout_weight="0.5"
                                    android:background="#dadada" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/mypage_request_ca_5"
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/test_mypage_request_list"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="후기작성"
                                        android:textColor="#484848"
                                        android:textSize="13dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/mypage_request_ca_layout_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="50dp"
                                android:visibility="gone"
                                android:layout_marginEnd="15dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/mypage_request_ca_6"
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:background="@drawable/request_ca_round_off"
                                        android:clickable="true"
                                        android:gravity="center"
                                        android:textColor="#484848"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="취소요청"
                                        android:textColor="#484848"
                                        android:textSize="13dp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="30dp"
                                    android:layout_height="1dp"
                                    android:layout_marginBottom="9dp"
                                    android:background="#dadada" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/mypage_request_ca_7"
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:background="@drawable/request_ca_round_off"
                                        android:clickable="true"
                                        android:gravity="center"
                                        android:textColor="#484848"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="취소완료"
                                        android:textColor="#484848"
                                        android:textSize="13dp" />
                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/move_pager_list"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/test_mypage_list_btn_bac"
                                android:gravity="center"
                                android:text="전체보기"
                                android:textColor="#838383"
                                android:textSize="12dp" />
                        </LinearLayout>



                        </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mypage_photo_list"
                    android:layout_width="0dp"
                    android:layout_height="247dp"
                    android:layout_marginStart="20dp"
                    android:visibility="gone"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mypage_list_layout_2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/test_mypage_image_1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:text="내 게시글"
                                android:textColor="#fff"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#fff" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="0.5"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:src="@drawable/test_mypage_image_2" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="#fff" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/test_mypage_image_3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|right"
                                    android:layout_margin="10dp"
                                    android:text="+5"
                                    android:textColor="#fff"
                                    android:textSize="10dp" />
                            </FrameLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/bottom_cardview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mypage_photo_list">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mypage_photo_list">

                        <RelativeLayout
                            android:id="@+id/mypage_information"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:clickable="true"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="33dp"
                                    android:layout_height="33dp"
                                    android:src="@drawable/mypage_information" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="15dp"
                                    android:textSize="15dp"
                                    android:text="이용안내"
                                    android:textColor="#484848" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:src="@drawable/main_next_list" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/mypage_notice"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:clickable="true"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="33dp"
                                    android:layout_height="33dp"
                                    android:src="@drawable/mypage_notice" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="15dp"
                                    android:textSize="15dp"
                                    android:text="공지사항"
                                    android:textColor="#484848" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:src="@drawable/main_next_list" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/mypage_info_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
