<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:columnCount="3"
                android:orientation="vertical"
                android:rowCount="6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_all_model_so_text_0"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/join_background"
                        android:gravity="center"
                        android:text="기본순"
                        android:textColor="#cbcbcb"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/btn_all_model_so_text_1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="9dp"
                        android:background="@drawable/join_background"
                        android:gravity="center"
                        android:text="인기순"
                        android:textColor="#cbcbcb"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/btn_all_model_so_text_2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/join_background"
                        android:gravity="center"
                        android:text="평점순"
                        android:textColor="#cbcbcb"
                        android:textSize="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_all_model_so_text_3"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/join_background"
                        android:gravity="center"
                        android:text="등록순"
                        android:textColor="#cbcbcb"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/btn_all_model_so_text_4"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="9dp"
                        android:background="@drawable/join_background"
                        android:gravity="center"
                        android:text="응답순"
                        android:textColor="#cbcbcb"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/join_background"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:textColor="#cbcbcb"
                        android:textSize="10dp" />


                </LinearLayout>

            </GridLayout>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>