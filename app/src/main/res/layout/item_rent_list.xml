<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">


        <ImageView
            android:id="@+id/rent_list_image"
            android:layout_width="162dp"
            android:layout_height="162dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/rent_list_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/rent_list_image"
            app:layout_constraintTop_toBottomOf="@+id/rent_list_image">

            <TextView
                android:id="@+id/rent_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="대여업체"
                android:textColor="#a3a3a3"
                android:textSize="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/rent_list_sub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#6c6c6c"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@+id/rent_list_image"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/rent_list_image"
            app:layout_constraintTop_toBottomOf="@+id/rent_list_title_layout" />

        <TextView
            android:id="@+id/rent_list_sub_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#6a32eb"
            android:layout_marginStart="8dp"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="@+id/rent_list_image"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/rent_list_image"
            app:layout_constraintTop_toBottomOf="@+id/rent_list_sub" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/rent_list_sub_category"
            app:layout_constraintTop_toBottomOf="@+id/rent_list_sub_category">

            <ImageView
                android:id="@+id/studio_grade_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/studio_grade" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.9 (10+)"
                android:textColor="#000"
                android:textSize="11dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
