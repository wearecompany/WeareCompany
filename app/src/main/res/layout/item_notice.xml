<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mRootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="카메라 설정만 바꾸어도 사진이 달라진다?"
                android:textColor="#000"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/notice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#d1d1d1"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/notice_title"
            app:layout_constraintStart_toStartOf="@+id/notice_title"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"
            android:layout_marginTop="10dp"
            android:background="#d0d0d0"
            app:layout_constraintTop_toBottomOf="@+id/notice_time"
            app:layout_constraintStart_toStartOf="@+id/notice_title"
            app:layout_constraintStart_toEndOf="parent"/>

            <ImageView
                android:id="@+id/information_image"
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:src="@drawable/mypage_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.97"
                app:layout_constraintBottom_toBottomOf="@+id/mRootView"
                app:layout_constraintVertical_bias="0.2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>