<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/oneclik_ca_0"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:background="@drawable/mypage_request_list_ca_bac">

                            <ImageView
                                android:id="@+id/oneclik_ca_0_img"
                                android:layout_width="14dp"
                                android:layout_gravity="center"
                                android:layout_height="16dp"/>
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/oneclik_ca_1"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:visibility="invisible"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/mypage_request_list_ca_bac">

                            <ImageView
                                android:id="@+id/oneclik_ca_1_img"
                                android:layout_width="14dp"
                                android:layout_gravity="center"
                                android:layout_height="16dp"/>
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/oneclik_ca_2"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:visibility="invisible"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/mypage_request_list_ca_bac">

                            <ImageView
                                android:id="@+id/oneclik_ca_2_img"
                                android:layout_width="14dp"
                                android:layout_gravity="center"
                                android:layout_height="16dp"/>
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/oneclik_ca_3"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:visibility="invisible"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/mypage_request_list_ca_bac">

                            <ImageView
                                android:id="@+id/oneclik_ca_3_img"
                                android:layout_width="14dp"
                                android:layout_gravity="center"
                                android:layout_height="16dp"/>
                        </FrameLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/request_list_onclick_call_time"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="2021.09.05"
                        android:textColor="#0f0f0f"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/request_list_onclick_purchase_btn"
                        android:layout_width="70dp"
                        android:layout_height="24dp"
                        android:text="구매확정"
                        android:gravity="center"
                        android:clickable="true"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:textColor="#fff"
                        android:textSize="11dp"
                        android:background="@drawable/estimate_btn_background"/>

                    <TextView
                        android:id="@+id/request_list_onclick_review_btn"
                        android:layout_width="70dp"
                        android:layout_height="24dp"
                        android:text="리뷰작성"
                        android:gravity="center"
                        android:clickable="true"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:textColor="#fff"
                        android:textSize="11dp"
                        android:background="@drawable/estimate_btn_background"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/request_list_receive_onclick_image_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/request_list_receive_onclick_clip_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:id="@+id/request_list_receive_onclick_money_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="9dp"
                        android:background="#eaeaea"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/request_list_receive_onclick_money_title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="최종 결제 금액"
                            android:textColor="#6d34f3"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/request_list_receive_onclick_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="300,000"
                                android:textStyle="bold"
                                android:textColor="#6d34f3"
                                android:textSize="12dp"/>

                            <TextView
                                android:id="@+id/request_list_receive_onclick_money_title_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="원"
                                android:textStyle="bold"
                                android:textColor="#6d34f3"
                                android:textSize="12dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>